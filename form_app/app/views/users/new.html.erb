<%= form_with model: @user do |form| %>
  <%= label_tag(:username, "Username: ") %>
  <%= form.text_field :username, :placeholder => "Daddy Lemon" %>
  <%= label_tag(:password, "Password: ") %>
  <%= form.password_field :password, :placeholder => "8 characters" %>
  <%= label_tag(:email, "Email: ") %>
  <%= form.email_field :email, :placeholder => "daddylemon@gmail.com" %>
  <%= form.submit("Create User") %>
<% end %>

<% if @user.errors.any? %>
  <ul>
    <%= @user.errors.full_messages.each do |err|%>
      <li> <%= err %> </li>
    <% end %>
  </ul>
<% end %>

